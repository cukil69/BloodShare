<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="right|center_vertical"
        android:right="0dp">
        <bitmap
            android:width="@dimen/dimen8"
            android:height="@dimen/dimen8"
            android:src="@drawable/ic_arrow_dropdown" />
    </item>
    <item
        android:left="-5dp"
        android:right="-5dp"
        android:top="-5dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/colorInputBorder" />
        </shape>
    </item>
</layer-list>